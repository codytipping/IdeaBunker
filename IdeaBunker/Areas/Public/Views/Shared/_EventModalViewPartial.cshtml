@model EventViewModel

<div class="modal" id="myModal">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Provide Feedback</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <form asp-controller="Project" asp-action="Create">
                <div class="modal-body">
                    <div id="hiddenFormData" style="display: none;"></div>
                    <div class="form-group">
                        <label asp-for="EventDescription" class="form-label">Why are you creating this project?</label>
                        <textarea asp-for="EventDescription" class="form-control" rows="5"></textarea>
                        <!--<span asp-validation-for="EventDescription" class="text-danger"></span>-->
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#myModal').modal('show');
    });
</script>
