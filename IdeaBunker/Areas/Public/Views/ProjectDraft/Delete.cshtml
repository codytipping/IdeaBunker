@model ProjectDetailsViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Create)).Result.Succeeded)
{
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Project</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserNameAndRank)
            </dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryDescription)
            </dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusDescription)
            </dd>
            <dt class="col-sm-2">Upvotes</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpvoteCount)
            </dd>
            <dt class="col-sm-2">Downvotes</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DownvoteCount)
            </dd>
            <div class="col-sm-10">
                <form asp-action="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"><b>Provide Feedback</b></label>
                        <input asp-for="EventDescription" class="form-control" placeholder="Why are you deleting this project?" />
                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </div>
                    @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Create)).Result.Succeeded)
                    {
                        <a asp-action="Index">Back to List</a>
                    }
                </form>
            </div>
        </dl>
    </div>
}