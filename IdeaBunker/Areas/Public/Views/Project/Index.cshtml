@model IEnumerable<ProjectViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.View)).Result.Succeeded)
{
    <h1>Index</h1>

    <p>
        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Create)).Result.Succeeded)
        {
            <a asp-controller="ProjectCreate" asp-action="Create">Create New</a>

            <text> | </text>
            <a asp-action="Index">View Your Unpublished Projects</a>
        }
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>User</th>
                <th>Category</th>
                <th>Clearance</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserNameAndRank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClearanceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>
                    <td>
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Vote)).Result.Succeeded)
                        {
                            <a asp-controller="ProjectVote" asp-action="Vote" asp-route-id="@item.Id">Vote</a>

                            <text> | </text>
                        }
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Edit)).Result.Succeeded)
                        {
                            <a asp-controller="ProjectEdit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            <text> | </text>
                        }
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.View)).Result.Succeeded)
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>

                            <text> | </text>
                        }
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Project.Delete)).Result.Succeeded)
                        {
                            <a asp-controller="ProjectDelete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}