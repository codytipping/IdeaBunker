@model CategoryDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Category.View)).Result.Succeeded)
{
    <h1>Details</h1>

    <div>
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserNameAndRank)
            </dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StatusDescription)
            </dd>
        </dl>
    </div>
    <div>
        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Category.Edit)).Result.Succeeded)
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        }
    </div>
}