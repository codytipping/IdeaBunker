@model IEnumerable<CommentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Comment.View)).Result.Succeeded)
{
    <h1>Index</h1>
    <p>
        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Comment.Create)).Result.Succeeded)
        {
            <a asp-action="Create">Create New</a> <text> | </text>
            <a asp-controller="Project" asp-action="Index">Back to List</a>
        }
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Project</th>
                <th>User</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserNameAndRank)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>                        
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Comment.Edit)).Result.Succeeded)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><text> | </text>
                        }                       
                        @if ((AuthorizationService.AuthorizeAsync(User, PermissionsMaster.Comment.Delete)).Result.Succeeded)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}